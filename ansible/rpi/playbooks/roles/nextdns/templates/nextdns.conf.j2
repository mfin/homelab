hardened-privacy false
timeout 5s
debug false
forwarder {{ network.domain }}.=127.0.0.1:5353
forwarder {{ homelab.domain }}.=127.0.0.1:5353
forwarder {{ remote.domain }}.=127.0.0.1:5353
cache-max-age 0s
report-client-info true
discovery-dns {{ router_ip }}
detect-captive-portals false
max-inflight-requests 256
cache-size 10MB
auto-activate false
control /var/run/nextdns.sock
bogus-priv true
log-queries true
max-ttl 5s
mdns all
use-hosts true
setup-router true
listen :53
profile {{ nextdns.profile }}
